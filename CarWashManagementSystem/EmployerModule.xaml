<Window x:Class="CarWashManagementSystem.EmployerModule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarWashManagementSystem"
        mc:Ignorable="d"
          Title="WarehouseModule" Height="360" Width="708"
 FontFamily="Century Gothic" FontSize="12"
 WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <DockPanel HorizontalAlignment="Center" Height="20" LastChildFill="False" VerticalAlignment="Top" Width="706" Background="#FFC10037"/>
        <Label Content="Employer Registration" HorizontalAlignment="Left" Height="27" Margin="10,25,0,0" VerticalAlignment="Top" Width="136" Foreground="#FFC10037" FontWeight="Bold"/>
        <Button x:Name="btnClose" HorizontalAlignment="Left" Height="20" Margin="670,25,0,0" VerticalAlignment="Top" Width="20" BorderThickness="0" Background="White" Click="btnClose_Click">
            <Image Source="/CarWashManagementSystem;component/images/cancel_20px.png" RenderTransformOrigin="1.604,0.667" />
        </Button>

        <Label Content="Full name:" HorizontalAlignment="Left" Height="24" Margin="10,50,0,0" VerticalAlignment="Top" Width="68"/>
        <TextBox x:Name="txtFullName" HorizontalAlignment="Left" Height="24" Margin="100,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="585"/>

        <Label Content="Date of Birth:" HorizontalAlignment="Left" Height="24" Margin="10,80,0,0" VerticalAlignment="Top" Width="85"/>
        <DatePicker x:Name="dpDob" HorizontalAlignment="Left" Height="24" Margin="100,80,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Phone:" HorizontalAlignment="Left" Height="24" Margin="320,80,0,0" VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Height="24" Margin="380,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>

        <Label Content="Address:" HorizontalAlignment="Left" Height="24" Margin="10,110,0,0" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="72" Margin="100,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="585"/>

        <Label Content="Gender:" HorizontalAlignment="Left" Height="24" Margin="200,235,0,0" VerticalAlignment="Top" Width="60"/>
        <RadioButton x:Name="rdMale" Content="Male" HorizontalAlignment="Left" Height="24" Margin="280,240,0,0" VerticalAlignment="Top" Width="50"/>
        <RadioButton x:Name="rdFemale" Content="Female" HorizontalAlignment="Left" Height="24" Margin="350,240,0,0" VerticalAlignment="Top" Width="65"/>

        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Height="60" Margin="110,280,0,0" VerticalAlignment="Top" Width="100" BorderThickness="0" Background="#FF4965F0" Foreground="White" Click="btnCreate_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="60" Margin="490,280,0,0" VerticalAlignment="Top" Width="100" BorderThickness="0" Background="#FF4965F0" Foreground="White" Click="btnCancel_Click"/>

    </Grid>
</Window>
